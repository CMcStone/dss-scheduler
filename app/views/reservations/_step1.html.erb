<h1>Agenda</h1>

<table class="table table-striped table-condensed wizard">
  <tr>
    <th>Resource</th>
    <th>Date</th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr id="<%= 'reservation_' + reservation.id.to_s %>">
    <td><%= reservation.title %></td>
    <td><%= reservation.cache_start_time.strftime("%m/%d/%Y") %></td>
    <td><%= link_to 'Cancel', reservation, method: :delete, remote: true %></td>
  </tr>
<% end %>
</table>
<h1>What would you like to reserve?</h1>
<%= form_for(@reservation, :remote=>true, :url => reservations_wizard_path) do |f| %>
	<div class="btn-group wizard-btn-group">
		<%= f.submit "Projector", :name => "next_button", :class => "btn wizard-resource resource-projector" %>
		<%= f.submit "Laptop", :name => "next_button", :class => "btn wizard-resource resource-laptop" %>
		<%= f.submit "Advising", :name => "next_button", :class => "btn wizard-resource resource-advising" %>
		<%= f.submit "Room", :name => "next_button", :class => "btn wizard-resource resource-room" %>
		<%= f.submit "'A' Permit", :name => "next_button", :class => "btn wizard-resource resource-permit" %>
		<%= f.submit "Vehicle", :name => "next_button", :class => "btn wizard-resource resource-vehicle" %>
	</div>
<% end %>
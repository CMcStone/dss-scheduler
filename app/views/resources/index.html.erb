<h1>Listing resources</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Exchange calendar id</th>
    <th>Ou uid</th>
	<th>Instructions</th>
	<th>Role Required</th>
	<th>Allow Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.name %></td>
    <td><%= resource.category_id %></td>
    <td><%= resource.description %></td>
    <td><%= resource.exchange_calendar_id %></td>
    <td><%= resource.ou_uid %></td>
    <td><%= resource.instructions %></td>
    <td><%= resource.role_required %></td>
    <td><%= resource.allow_public %></td>
	<td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


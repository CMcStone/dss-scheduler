<h1>Listing resources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Exchange url</th>
    <th>Ou uid</th>
    <th>Week field</th>
    <th>Start time</th>
    <th>End time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.name %></td>
    <td><%= resource.category_id %></td>
    <td><%= resource.description %></td>
    <td><%= resource.exchange_url %></td>
    <td><%= resource.ou_uid %></td>
    <td><%= resource.week_field %></td>
    <td><%= resource.start_time %></td>
    <td><%= resource.end_time %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

